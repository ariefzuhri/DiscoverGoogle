<resources>

    <!-- Base application theme. -->
    <style name="Theme.DiscoverGoogle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/gantari</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.DiscoverGoogle.Starting" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme.DiscoverGoogle</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_24_splash</item>
        <item name="windowSplashScreenBackground">@color/blue</item>
    </style>

    <style name="BorderView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="ImageView">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/ic_placeholder_24</item>
    </style>

    <style name="MaterialCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="shapeAppearanceOverlay">@style/MaterialCardViewShapeAppearance</item>
    </style>

    <style name="MaterialCardViewShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="RecyclerView">
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="TextView">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextView.Header">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="drawableTint">@color/black</item>
    </style>

    <style name="TextView.Header.1">
        <item name="android:textSize">@dimen/textsize_large</item>
    </style>

    <style name="TextView.Header.2">
        <item name="android:textSize">@dimen/textsize_normal</item>
    </style>

    <style name="TextView.Small">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="drawableTint">@color/dark_grey</item>
    </style>

    <style name="TextView.Text">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="drawableTint">@color/dark_grey</item>
    </style>

</resources>